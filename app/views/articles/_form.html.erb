<%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content,  rows: 15, data: {provide: "markdown"}, size: '50x10', class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-outline-secondary' %>
<% end %>
